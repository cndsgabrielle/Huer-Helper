<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:fillViewport="true"
    android:fitsSystemWindows="false"> <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="40dp">

    <RelativeLayout
        android:id="@+id/about_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_about_back"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/glass_button_bg"
            android:src="@drawable/ic_arrow_back"
            android:padding="12dp"
            app:tint="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_about_back"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Huer Helper"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-black" />

                <ImageView
                    android:id="@+id/about_sparkle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_sparkle"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Why and How"
                android:textColor="#B3FFFFFF" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/about_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/divider_gradient"
        app:layout_constraintTop_toBottomOf="@id/about_header" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mission_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#20FFFFFF"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/about_divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp">
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/icon_box_bg"
                android:backgroundTint="#00E5FF">
                <ImageView android:layout_width="28dp" android:layout_height="28dp"
                    android:layout_gravity="center" android:src="@drawable/ic_eye_white" app:tint="#FFFFFF" />
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Our Mission" android:textColor="#FFFFFF" android:textSize="20sp" android:textStyle="bold" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Huer Helper is designed to empower people with color blindness by providing real-time identification tools." android:textColor="#E6FFFFFF" android:layout_marginTop="8dp" android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/features_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#10FFFFFF"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/mission_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_flash"
                    app:tint="#00E5FF" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Features Breakdown"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">
                <LinearLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/icon_box_bg"
                        android:backgroundTint="#00E5FF">
                        <ImageView android:layout_width="22dp" android:layout_height="22dp"
                            android:layout_gravity="center" android:src="@drawable/ic_camera" app:tint="#FFFFFF" />
                    </FrameLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:text="Live Color Scan" android:textColor="#FFFFFF" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="Identify colors around you in real-time with crosshair precision." android:textColor="#CCFFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">
                <LinearLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/icon_box_bg"
                        android:backgroundTint="#A855F7">
                        <ImageView android:layout_width="22dp" android:layout_height="22dp"
                            android:layout_gravity="center" android:src="@drawable/ic_style" app:tint="#FFFFFF" />
                    </FrameLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:text="Style Matcher" android:textColor="#FFFFFF" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="Coordinate your wardrobe using our dual-camera interface." android:textColor="#CCFFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bookmarks_about_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">
                <LinearLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/icon_box_bg"
                        android:backgroundTint="#0099FF">
                        <ImageView android:layout_width="22dp" android:layout_height="22dp"
                            android:layout_gravity="center" android:src="@drawable/ic_admin_bookmarks" app:tint="#FFFFFF" />
                    </FrameLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="16dp">
                        <TextView android:text="Bookmarks" android:textColor="#FFFFFF" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="Save and organize your personal color memory library with custom tags." android:textColor="#CCFFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tech_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#10FFFFFF"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/features_container">
        <LinearLayout
            android:padding="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:text="Technology &amp; Accessibility" android:textColor="#FFFFFF" android:textSize="22sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
            <TextView android:text="• Real-time camera color detection with targeting" android:textColor="#CCFFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
            <TextView android:text="• Optimized for Android mobile devices" android:textColor="#CCFFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="• Bold borders and text labels on all interactive elements" android:textColor="#CCFFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#10FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tech_card">
        <LinearLayout
            android:padding="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:text="Huer Helper v1.0" android:textColor="#FFFFFF" android:textStyle="bold" android:textSize="16sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="Professional Color Assistant" android:textColor="#80FFFFFF" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>