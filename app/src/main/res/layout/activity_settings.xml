<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/home_background">

    <RelativeLayout
        android:id="@+id/settings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/glass_button_bg"
            android:src="@drawable/ic_arrow_back"
            android:padding="12dp"
            app:tint="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btn_back"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black" />

                <ImageView
                    android:id="@+id/sparkle_icon_settings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_sparkle"
                    app:tint="#FFFFFF" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your account"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_gradient"
        app:layout_constraintTop_toBottomOf="@id/settings_header" />

    <LinearLayout
        android:id="@+id/profile_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@drawable/glass_card_bg"
        android:orientation="vertical"
        android:padding="24dp"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Information"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Edit"
                android:textColor="#00E5FF"
                android:textStyle="bold"
                android:clickable="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="#B3FFFFFF"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="8dp"
            app:drawableTint="#FFFFFF" />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/glass_button_bg"
            android:paddingHorizontal="16dp"
            android:text="bcandesse080505@gmail.com"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:enabled="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#B3FFFFFF"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="8dp"
            app:drawableTint="#FFFFFF" />
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/glass_button_bg"
            android:paddingHorizontal="16dp"
            android:text="bcandesse080505"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:enabled="false" />

        <LinearLayout
            android:id="@+id/layout_password_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#B3FFFFFF"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="8dp"
                app:drawableTint="#FFFFFF" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/glass_button_bg">
                <TextView
                    android:id="@+id/tv_password_dots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:text="••••••"
                    android:textColor="#FFFFFF" />
                <ImageView
                    android:id="@+id/iv_eye_view"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye"
                    app:tint="#B3FFFFFF" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#33FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password (Optional)"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:textColor="#B3FFFFFF"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="8dp"
                app:drawableTint="#FFFFFF" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/glass_button_bg">
                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="textPassword"
                    android:text="password123"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/iv_eye_new"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye"
                    app:tint="#B3FFFFFF" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm New Password"
                android:textColor="#B3FFFFFF"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="8dp"
                app:drawableTint="#FFFFFF" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/glass_button_bg">
                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="16dp"
                    android:inputType="textPassword"
                    android:text="password123"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/iv_eye_confirm"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye"
                    app:tint="#B3FFFFFF" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_save_changes"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Save Changes"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/card_gradient_blue"
                    app:backgroundTint="@null" />
                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/glass_button_bg"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_sign_out"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="40dp"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_gradient_pink"
        app:backgroundTint="@null"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="-20dp"
        android:paddingStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>