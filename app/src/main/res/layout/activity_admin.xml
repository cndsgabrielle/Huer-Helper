<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <RelativeLayout
            android:id="@+id/admin_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/header_text_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin Dashboard"
                        android:textColor="#FFFFFF"
                        android:textSize="26sp"
                        android:fontFamily="sans-serif-black" />
                    <ImageView
                        android:id="@+id/sparkle_icon_admin"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_sparkle"
                        app:tint="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Management Hub"
                    android:textColor="#B3FFFFFF" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_admin_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="@drawable/glass_button_bg"
                android:src="@drawable/ic_settings"
                android:padding="10dp"
                android:scaleType="centerInside"
                app:tint="#FFFFFF" />

        </RelativeLayout>

        <View
            android:id="@+id/admin_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/divider_gradient"
            app:layout_constraintTop_toBottomOf="@id/admin_header" />

        <GridLayout
            android:id="@+id/stats_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/admin_divider">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_box_bg"
                        android:backgroundTint="#22D3EE">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp"
                            android:layout_gravity="center" android:src="@drawable/ic_admin_users" app:tint="#FFFFFF" />
                    </FrameLayout>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Total Users" android:textColor="#FFFFFF" android:layout_marginTop="12dp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="5" android:textColor="#FFFFFF" android:textSize="28sp" android:fontFamily="sans-serif-black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_box_bg"
                        android:backgroundTint="#10B981">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp"
                            android:layout_gravity="center" android:src="@drawable/ic_admin_active" app:tint="#FFFFFF" />
                    </FrameLayout>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Active Today" android:textColor="#FFFFFF" android:layout_marginTop="12dp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="12" android:textColor="#FFFFFF" android:textSize="28sp" android:fontFamily="sans-serif-black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_box_bg"
                        android:backgroundTint="#A855F7">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp"
                            android:layout_gravity="center" android:src="@drawable/ic_admin_bookmarks" app:tint="#FFFFFF" />
                    </FrameLayout>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="User Bookmarks" android:textColor="#FFFFFF" android:layout_marginTop="12dp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="0" android:textColor="#FFFFFF" android:textSize="28sp" android:fontFamily="sans-serif-black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/icon_box_bg"
                        android:backgroundTint="#EF4444">
                        <ImageView android:layout_width="24dp" android:layout_height="24dp"
                            android:layout_gravity="center" android:src="@drawable/ic_admin_library" app:tint="#FFFFFF" />
                    </FrameLayout>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="Global Library" android:textColor="#FFFFFF" android:layout_marginTop="12dp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="1547" android:textColor="#FFFFFF" android:textSize="28sp" android:fontFamily="sans-serif-black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/quick_stats_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:cardBackgroundColor="#1AFFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/stats_grid">
            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Quick Stats" android:textColor="#FFFFFF" android:textSize="18sp" android:textStyle="bold" android:layout_marginBottom="16dp"/>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Suspended Accounts:" android:textColor="#B3FFFFFF"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="1" android:textColor="#FFFFFF" android:textStyle="bold"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Active Accounts:" android:textColor="#B3FFFFFF"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="4" android:textColor="#FFFFFF" android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Management"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/quick_stats_box"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/management_outer_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="#10FFFFFF"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/txt_management">

            <LinearLayout
                android:id="@+id/user_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <include layout="@layout/item_user_admin" android:id="@+id/user_juan" />
                <include layout="@layout/item_user_admin" android:id="@+id/user_maria" />
                <include layout="@layout/item_user_admin" android:id="@+id/user_antonio" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>