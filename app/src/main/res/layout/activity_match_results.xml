<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_actions"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="78dp"
                    android:text="Match Results"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false" />

                <ImageView
                    android:id="@+id/result_sparkle"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_toEndOf="@id/tv_title"
                    android:layout_marginTop="82dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_sparkle"
                    app:tint="#FFFFFF" />

                <View
                    android:id="@+id/header_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_title"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/divider_gradient" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#30FFFFFF"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Items"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="8dp"
                            android:padding="12dp"
                            android:background="@drawable/glass_button_bg">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="#60A5FA" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Light Blue"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginStart="8dp"
                            android:padding="12dp"
                            android:background="@drawable/glass_button_bg">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="#FFFFFF" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="White"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/match_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/divider_gradient"
                app:layout_constraintTop_toBottomOf="@id/card_items" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#40FF5252"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/match_divider">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/glass_button_bg"
                        android:backgroundTint="#40FFFFFF">
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_close" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NO - Try Another"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="These colors may clash. Check recommendations below."
                            android:textColor="#E6FFFFFF"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_recommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#20FFFFFF"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/card_status">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended Colors"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:columnCount="2"
                        android:alignmentMode="alignMargins">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/glass_button_bg">
                            <View android:layout_width="match_parent" android:layout_height="80dp" android:background="#1E3A8A"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Navy Blue" android:textColor="#FFFFFF" android:textSize="12sp" android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/glass_button_bg">
                            <View android:layout_width="match_parent" android:layout_height="80dp" android:background="#374151"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Charcoal Gray" android:textColor="#FFFFFF" android:textSize="12sp" android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/glass_button_bg">
                            <View android:layout_width="match_parent" android:layout_height="80dp" android:background="#000000"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Black" android:textColor="#FFFFFF" android:textSize="12sp" android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/glass_button_bg">
                            <View android:layout_width="match_parent" android:layout_height="80dp" android:background="#555555"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dark Gray" android:textColor="#FFFFFF" android:textSize="12sp" android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_match"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="12dp"
            android:text="Save This Match"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/btn_gradient_purple"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_bookmark"
            app:iconSize="22dp"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:cornerRadius="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_retry"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Try Another Match"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/card_gradient_blue"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_retry"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconSize="15dp"
            app:cornerRadius="24dp" />

    </LinearLayout>

</RelativeLayout>